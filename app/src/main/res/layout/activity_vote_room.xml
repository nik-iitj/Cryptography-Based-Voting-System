<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteRoomActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="B5 Hostel Secretary"
        app:layout_constraintVertical_bias="0.15"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:id="@+id/hos"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Voting Room"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:id="@+id/candidates">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satyam Kumar"
            android:padding="40dp"
            android:textSize="20sp"
            android:id="@+id/satyam"
            android:textStyle="bold"
            android:checked="true"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vivek Pareek"
            android:textSize="20sp"
            android:id="@+id/vivek"
            android:padding="40dp"
            android:textStyle="bold"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Om solanki"
            android:textSize="20sp"
            android:id="@+id/om"
            android:padding="40dp"
            android:textStyle="bold"/>
    </RadioGroup>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/info_foreground"
        android:background="@drawable/layout_bg"
        android:elevation="10dp"
        app:layout_constraintLeft_toRightOf="@+id/candidates"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hos"
        android:id="@+id/info1"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.8"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/info_foreground"
        android:background="@drawable/layout_bg"
        android:elevation="10dp"
        app:layout_constraintLeft_toRightOf="@+id/candidates"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info1"
        android:id="@+id/info2"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.8"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/info_foreground"
        android:background="@drawable/layout_bg"
        android:elevation="10dp"
        app:layout_constraintLeft_toRightOf="@+id/candidates"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info2"
        android:id="@+id/info3"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/candidates"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_elevation"
        android:drawableLeft="@drawable/ic_baseline_send_24"
        android:drawableStart="@drawable/ic_baseline_send_24"
        android:text="Vote"
        android:textColor="@color/white"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:drawablePadding="15dp"
        android:id="@+id/vote"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/vote"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.1"
        android:id="@+id/total"/>



</androidx.constraintlayout.widget.ConstraintLayout>